<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tony.bookstore"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.INTERNET"/>
	
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar" 
        android:name="com.tony.bookstore.app.BookstoreApplication">
        <activity
            android:name="com.tony.bookstore.activiy.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="com.tony.bookstore.activiy.BookDetailsActivity"
            >
        </activity>
        <activity 
            android:name="com.tony.bookstore.activiy.LoginActivity"
            >
        </activity>
        
        <activity 
            android:name="com.tony.bookstore.activiy.RegisterActivity"
            >
        </activity>
        
         <activity 
            android:name="com.tony.bookstore.activiy.AddressActivity"
            >
        </activity>
    </application>

</manifest>
