<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

  
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_middle_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_bottom_bar"
         >
    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:id="@+id/rl_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shouye_bar_bottom" >

        <RadioGroup
            android:id="@+id/rg_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rb_tab_bookstore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/selector_bookstore"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="书城" 
                style="@style/text_white_18"/>

            <RadioButton
                android:id="@+id/rb_tab_cart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/selector_cart"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="购物车" 
                style="@style/text_white_18"/>

            <RadioButton
                android:id="@+id/rb_tab_mine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/selector_mine"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="我的" 
                style="@style/text_white_18"/>
        </RadioGroup>
    
	</RelativeLayout>
</RelativeLayout>